{
  // This will run "eslint --fix" on save so that code is automatically formatted
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "editor.fontSize": 17,
  "editor.renderWhitespace": "all", // We want to see spaces and tabs
  "editor.rulers": [100], // This matches the Airbnb JavaScript style guide
  "editor.tabCompletion": "on", // IntelliSense tab completion is off by default
  "editor.wordWrap": "on",

  // Disable the confirmation box when deleting a file
  "explorer.confirmDelete": false,

  // Linux line endings are commonly used as a programming standard
  "files.eol": "\n",

  // Disable the annoying release notes popup everytime that VSCode updates itself
  "update.showReleaseNotes": false,

  // Show the full path of the file in the window title
  "window.title": "${activeEditorLong}${separator}${rootName}",

  // This is the default, which will change if you accidently use Ctrl + - or Ctrl + =
  "window.zoomLevel": 0,

  // Don't show the welcome screen
  "workbench.startupEditor": "newUntitledFile"
}
