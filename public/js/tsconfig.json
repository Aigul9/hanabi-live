{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2018",
        "newLine": "lf",
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "removeComments": true,

        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
        "./src/**/*.ts",
    ]
}
